<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ title }}</h5>
        <blockquote class="blockquote mb-0">
            <p>{{ content }}</p>
            <footer class="blockquote-footer">Posted by {{ user.username }} on {{ format_date updatedAt }}</footer>
        </blockquote>
    </div>
</div>